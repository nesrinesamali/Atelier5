
{% extends 'base.html.twig' %}

{% block title %}List of Authors{% endblock %}

{% block body %}
    <h1>List of Authors</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Picture</th>
                <th>Username</th>
                <th>Email</th>
                <th>Number of Books</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td><img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="50" height="50"></td>
                <td>{{ author.username }}</td>
                <td>{{ author.email }}</td>
                <td>{{ author.nb_books }}</td>
                <td><a href="{{path('detail_author',{'id': author.id})}}">Details</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Total Number of Books: {{ totalbooks }}</h2>
{% endblock %}